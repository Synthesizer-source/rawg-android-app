<resources>
    <!-- Base application theme. -->
    <style name="Theme.Rawg" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/gray_dark</item>
        <item name="android:windowBackground">@color/gray_dark</item>
        <item name="android:textColor">@color/white_dark</item>
        <item name="chipStyle">@style/styleGameDetailGenreChip</item>
        <item name="attrGameListItemStyle">@style/styleGameListItem</item>
    </style>

    <style name="styleSearchView" parent="Widget.AppCompat.SearchView">
        <item name="android:textColor">@color/gray_light</item>
        <item name="android:editTextColor">@color/gray_light</item>
        <item name="android:textColorHint">@color/gray_light</item>
    </style>

    <style name="styleGameDetailGenreChip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="chipBackgroundColor">@color/gray_normal</item>
        <item name="android:textColor">@color/white_dark</item>
        <item name="ensureMinTouchTargetSize">false</item>
        <item name="rippleColor">@color/button_ripple_color</item>
    </style>

    <style name="styleErrorDialog" parent="Base.Theme.AppCompat.Dialog">
        <item name="android:windowMinWidthMajor">85%</item>
        <item name="android:windowMinWidthMinor">85%</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="styleGameListItem" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">@dimen/_8sdp</item>
        <item name="cardElevation">@dimen/_4sdp</item>
        <item name="cardPreventCornerOverlap">true</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardBackgroundColor">@color/gray_normal</item>
    </style>
</resources>