<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ConstraintSet android:id="@+id/start">
        <Constraint android:id="@+id/searchCardView" />
        <Constraint android:id="@id/descriptionText" />
        <Constraint android:id="@+id/titleText" />
        <Constraint android:id="@+id/headerImage" />
        <Constraint android:id="@+id/visitWebSiteButton" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint android:id="@id/searchCardView" />
        <Constraint android:id="@id/descriptionText" />
        <Constraint android:id="@+id/titleText" />
        <Constraint android:id="@+id/headerImage" />
        <Constraint android:id="@+id/visitWebSiteButton" />
    </ConstraintSet>

    <Transition
        android:id="@+id/clickSearch"
        app:autoTransition="none"
        app:constraintSetEnd="@id/end"
        app:constraintSetStart="@+id/start"
        app:layoutDuringTransition="ignoreRequest">
        <KeyFrameSet>
            <KeyAttribute
                android:translationY="-256dp"
                app:framePosition="100"
                app:motionTarget="@+id/searchCardView" />
            <KeyAttribute
                android:scaleX="0.5"
                android:scaleY="0.5"
                app:framePosition="100"
                app:motionTarget="@+id/titleText" />
            <KeyAttribute
                android:alpha="0.1"
                app:framePosition="100"
                app:motionTarget="@+id/headerImage" />
            <KeyAttribute
                android:alpha="0.1"
                app:framePosition="100"
                app:motionTarget="@+id/visitWebSiteButton" />
            <KeyAttribute
                android:alpha="0.1"
                app:framePosition="100"
                app:motionTarget="@+id/descriptionText" />
        </KeyFrameSet>
    </Transition>

    <Transition
        android:id="@+id/back"
        app:autoTransition="none"
        app:constraintSetEnd="@id/start"
        app:constraintSetStart="@+id/end"
        app:layoutDuringTransition="ignoreRequest">
        <KeyFrameSet>
            <KeyAttribute
                android:translationY="256dp"
                app:framePosition="100"
                app:motionTarget="@+id/searchCardView" />
            <KeyAttribute
                android:scaleX="1"
                android:scaleY="1"
                app:framePosition="100"
                app:motionTarget="@+id/titleText" />
            <KeyAttribute
                android:alpha="1"
                app:framePosition="100"
                app:motionTarget="@+id/headerImage" />
            <KeyAttribute
                android:alpha="1"
                app:framePosition="100"
                app:motionTarget="@+id/descriptionText" />
            <KeyAttribute
                android:alpha="1"
                app:framePosition="100"
                app:motionTarget="@+id/visitWebSiteButton" />
        </KeyFrameSet>
    </Transition>
</MotionScene>
