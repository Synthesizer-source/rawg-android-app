<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/emptyFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.synthesizer.source.rawg.ui.home.HomeFragment"
        android:label="HomeFragment">
        <action
            android:id="@+id/showGameDetail"
            app:destination="@id/gameDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/gameDetailFragment"
        android:name="com.synthesizer.source.rawg.ui.gamedetail.GameDetailFragment"
        android:label="GameDetailFragment">
        <argument
            android:name="gameId"
            android:defaultValue="1"
            app:argType="integer"
            app:nullable="false" />
    </fragment>
    <fragment
        android:id="@+id/emptyFragment"
        android:name="com.synthesizer.source.rawg.ui.EmptyFragment"
        android:label="EmptyFragment" />
</navigation>