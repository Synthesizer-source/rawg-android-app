<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/gameBackground"
            android:layout_width="match_parent"
            android:layout_height="256dp"
            android:scaleType="fitXY"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="ContentDescription"
            tools:src="@drawable/ic_launcher_background" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="16dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineEnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="16dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineCenter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />


        <TextView
            android:id="@+id/gameName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingVertical="16dp"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="@id/guidelineEnd"
            app:layout_constraintStart_toStartOf="@id/guidelineStart"
            app:layout_constraintTop_toBottomOf="@id/gameBackground"
            tools:text="Red dead Redemption II" />

        <TextView
            android:id="@+id/gameReleaseDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@id/guidelineCenter"
            app:layout_constraintStart_toStartOf="@id/guidelineStart"
            app:layout_constraintTop_toBottomOf="@id/gameName"
            tools:text="Release Date : May 7, 2021" />

        <TextView
            android:id="@+id/gameMetacritic"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@id/guidelineEnd"
            app:layout_constraintStart_toStartOf="@id/guidelineCenter"
            app:layout_constraintTop_toBottomOf="@id/gameName"
            tools:text="Metacritic : 97" />

        <TextView
            android:id="@+id/gamePublisherName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@id/guidelineCenter"
            app:layout_constraintStart_toStartOf="@id/guidelineStart"
            app:layout_constraintTop_toBottomOf="@id/gameReleaseDate"
            tools:text="Publisher : Rockstar Games" />

        <ImageView
            android:id="@+id/pcPlatformIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:src="@drawable/ic_windows"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="@id/guidelineCenter"
            app:layout_constraintTop_toBottomOf="@id/gameMetacritic" />

        <ImageView
            android:id="@+id/psPlatformIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:src="@drawable/ic_playstation"
            android:visibility="gone"
            app:layout_constraintStart_toEndOf="@id/pcPlatformIcon"
            app:layout_constraintTop_toBottomOf="@id/gameMetacritic" />

        <ImageView
            android:id="@+id/xboxPlatformIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:src="@drawable/ic_xbox"
            android:visibility="gone"
            app:layout_constraintStart_toEndOf="@id/psPlatformIcon"
            app:layout_constraintTop_toBottomOf="@id/gameMetacritic" />

        <ImageView
            android:id="@+id/nintendoPlatformIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:src="@drawable/ic_nintendo"
            android:visibility="gone"
            app:layout_constraintStart_toEndOf="@id/xboxPlatformIcon"
            app:layout_constraintTop_toBottomOf="@id/gameMetacritic" />

        <com.synthesizer.source.rawg.ui.custom.ExpandableLayout
            android:id="@+id/description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="@id/guidelineEnd"
            app:layout_constraintStart_toStartOf="@id/guidelineStart"
            app:layout_constraintTop_toBottomOf="@id/gamePublisherName">

            <TextView
                android:id="@+id/descriptionHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/expandable_layout_header"
                android:padding="8dp"
                android:paddingEnd="36dp"
                android:text="@string/description"
                android:textColor="@color/secondary_darker_red"
                android:textSize="24sp"
                app:drawableEndCompat="@drawable/ic_dashed_plus" />

            <TextView
                android:id="@+id/descriptionBody"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/expandable_layout_body"
                android:padding="8dp"
                android:textColor="@color/white"
                android:textSize="16sp"
                tools:text="@string/lorem_ipsum" />
        </com.synthesizer.source.rawg.ui.custom.ExpandableLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>